---
layout: 'default'
---

<div class="grid">
	<% for document in @getCollection("posts").toJSON(): %>
		<div typeof="sioc:Page" about="<%= document.url %>" class="item col dsk-3 tab-4 mob-12 <%= 'active' if @document.url is document.url %>">
			<article class="square-item module">
				<a href="<%= document.url %>" >
					<img src="/images/<%= document.mainImage %>" class="big-thumb" />
				</a>	
				<header class="pull-out cramped">
					<a class="h6 cramp" href="<%= document.url %>" property="dc:title"><%= document.title %></a>
					<span class="meta smallprint">
						<time datetime="<%= document.date.toDateString() %>"><%= document.date.toDateString() %></time>
					</span>
				</header>

			</article>
		</div>
    <% end %>
</div>


<section class="grid typearea center section" id="mixcloud">
	
	<div class="cramp col dsk-3  tab-4 mob-12">
			<h1 class="h3"> Mixcloud </h4>
		    <% for mix in @feedr.feeds.mixcloud.data: %>
			   <article class="square-item module">
			   <header class="pull-out cramped">
			   		  <h1 class="h6"><a href="<%= mix.url %>" title="View on Mixcloud"><%=  mix.name %></a> <h1>
			   	</header>
			       
			            <a href="<%= mix.url %>" title="View on Mixcloud">
			            	<img src="<%= mix.pictures.large %>" class="big-thumb" />
			            </a>
			    </article>   
		    <% end %>
			
		
	</div>
	<div class="cramp col dsk-3  tab-4 mob-12">
		<h1 class="h3"> Flickr</h1>
		    <% for photo in @feedr.feeds.flickr.photos.photo: %>
		    	<% photo = photo["@"] %>
				<article class="square-item module">
	        		<a href="<%= photo.url_n %>" title=" <%= photo.title %>"> <img src="<%= photo.url_m %>" /></a>
			    </article>   
		    <% end %>
	</div>
	<div class="cramp col dsk-3  tab-4 mob-12">
			<h1 class="h3">SoundCloud</h1>
			
	</div>

	<div class="cramp col dsk-3  tab-4 mob-12">
			<h1 class="h3">Bandcamp</h1>
			
	</div>
</section>